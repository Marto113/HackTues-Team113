#:kivy 1.0

<BoxLayout>:
    padding: 20
    spacing: 20
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size

<FileChooserListView>:
    canvas.before:
        Color:
            rgba: 46, 204, 113, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Image>:
    canvas.before:
        Color:
            rgba: 0.8, 0.8, 0.8, 1
        Rectangle:
            pos: self.pos
            size: self.size
